<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>YT Stats Results</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Roboto', sans-serif;
      }

      body {
        background: #212121;
        color: #fff;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        padding: 40px 20px;
      }

      .container {
        max-width: 1000px;
        width: 100%;
        background: #fff;
        color: #212121;
        border-radius: 10px;
        padding: 30px 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        text-align: center;
      }

      h1 {
        font-size: 1.6rem;
        font-weight: 700;
        margin-bottom: 20px;
        color: #333;
      }

      input.search-bar {
        width: 50%;
        padding: 10px 15px;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        table-layout: fixed; /* important for truncation */
      }

      th, td {
        padding: 12px 15px;
        text-align: left;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      th {
        background-color: #CD201F;
        color: #fff;
        position: sticky;
        top: 0;
      }

      tr:nth-child(even) {
        background-color: #f7f7f7;
      }

      tr:hover {
        background-color: #eee;
      }

      th:first-child, td:first-child {
        width: 70%;
      }

      th:last-child, td:last-child {
        width: 30%;
        text-align: right;
      }

      .table-container {
        max-height: 600px;
        overflow-y: auto;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-bottom: 20px;

        scrollbar-width: none;
        -ms-overflow-style: none;
      }

      button.toggle-btn {
        padding: 10px 20px;
        border: none;
        background-color: #CD201F;
        color: #fff;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 5px;
        margin-bottom: 20px;
        transition: background 0.3s ease;
      }

      button.toggle-btn:hover {
        background-color: #a51a19;
      }

      a.back-link {
        display: inline-block;
        margin-top: 20px;
        text-decoration: none;
        color: #CD201F;
        font-weight: 600;
        transition: color 0.3s ease;
      }

      a.back-link:hover {
        color: #a51a19;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Youtube Music Stats</h1>
      <button class="toggle-btn" id="toggleBtn">Show Songs</button>
      <br>
      <input type="text" id="searchInput" class="search-bar" placeholder="Search...">
      <div class="table-container" id="artistTable">
        <table>
          <thead>
            <tr>
              <th>Artist</th>
              <th>Count</th>
            </tr>
          </thead>
          <tbody>
            <% @sorted_artists.each do |artist, count| %>
              <tr>
                <td title="<%= artist %>"><%= artist %></td>
                <td><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="table-container" id="songTable" style="display: none;">
        <table>
          <thead>
            <tr>
              <th>Song</th>
              <th>Count</th>
            </tr>
          </thead>
          <tbody>
            <% @sorted_songs.each do |song, count| %>
              <tr>
                <td title="<%= song %>"><%= song %></td>
                <td><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <a href="/" class="back-link">Upload another file</a>
    </div>
    <script>
      const toggleBtn = document.getElementById('toggleBtn');
      const artistTable = document.getElementById('artistTable');
      const songTable = document.getElementById('songTable');
      const searchInput = document.getElementById('searchInput');

      toggleBtn.addEventListener('click', () => {
        if (artistTable.style.display !== 'none') {
          artistTable.style.display = 'none';
          songTable.style.display = 'block';
          toggleBtn.textContent = 'Show Artists';
          searchInput.value = '';
        } else {
          artistTable.style.display = 'block';
          songTable.style.display = 'none';
          toggleBtn.textContent = 'Show Songs';
          searchInput.value = '';
        }
      });

      searchInput.addEventListener('input', () => {
        const filter = searchInput.value.toLowerCase();
        const activeTable = artistTable.style.display !== 'none' ? artistTable : songTable;
        const rows = activeTable.querySelectorAll('tbody tr');

        rows.forEach(row => {
          const text = row.cells[0].textContent.toLowerCase();
          row.style.display = text.includes(filter) ? '' : 'none';
        });
      });
    </script>
  </body>
</html>
